{
  "appId": "convoy",
  "component": "AppHeader",
  "purpose": "現在コンテキストを明確にし、主要導線へ最短で到達させる",
  "layout": {
    "heightPx": 56,
    "paddingX": 16,
    "safeArea": true,
    "structure": "left / center / right"
  },
  "slots": {
    "left": [
      {
        "type": "button",
        "id": "back",
        "label": "Back",
        "visibilityRule": "visible when canNavigateBack"
      }
    ],
    "center": [
      {
        "type": "text",
        "id": "title",
        "content": "Convoy",
        "priority": "highest"
      },
      {
        "type": "chip",
        "id": "workspace",
        "contentRule": "current workspace name",
        "priority": "medium"
      }
    ],
    "right": [
      {
        "type": "button",
        "id": "commandPalette",
        "label": "Command",
        "shortcutHint": "Ctrl+K",
        "visibilityRule": "desktop only"
      },
      {
        "type": "button",
        "id": "settings",
        "label": "Settings"
      }
    ]
  },
  "states": {
    "default": {
      "title": "Convoy",
      "workspaceChip": "Workspace"
    },
    "loading": {
      "title": "Convoy",
      "workspaceChip": "Loading…",
      "disableActions": true
    },
    "offline": {
      "title": "Convoy",
      "workspaceChip": "Offline",
      "showStatusDot": true
    }
  },
  "interaction": {
    "tapMinHeightPx": 44,
    "hover": true,
    "focusVisible": true,
    "transition": "colors"
  },
  "a11y": {
    "useButtonForActions": true,
    "ariaLabels": {
      "back": "Go back",
      "commandPalette": "Open command palette",
      "settings": "Open settings"
    }
  },
  "nonGoals": [
    "Do not include heavy branding imagery in the header",
    "Do not use absolute positioning for the main layout"
  ]
}
